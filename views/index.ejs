<style>
/* Hide scrollbar while still allowing horizontal scrolling */
    #filters {
        display: flex;
        overflow-x: auto; /* Allow horizontal scrolling */
        padding: 10px;
        scroll-behavior: smooth;
        scrollbar-width: none;
    }

  #filters::-webkit-scrollbar {
      display: none; /* Hide scrollbar */
  }

    .filter {
      flex: 0 0 auto; /* Ensure items don't shrink or grow */
      width: 100px;
      margin-right: 15px;
      margin-top: 12px;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
      padding: 10px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      transition: transform 0.3s ease;
    }

    .filter i {
      font-size: 20px;
      margin-bottom: 10px;
      color: #555;
    }

    .filter p {
      margin: 0;
      font-size: 14px;
      color: #333;
    }

    .filter:hover {
      transform: scale(1.1);
      cursor: pointer;
    }

    /* Scroll buttons */
    .scroll-btn {
      position: absolute;
      top: 21%;
      transform: translateY(-50%);
      background-color: transparent;
      border: none;
      padding: 10px;
      cursor: pointer;
      z-index: 1000;
    }

    .scroll-btn i{
      opacity: .5;
      transition: color 0.3s ease;
      transform: scale(1.1);
      
    }

    .scroll-btn i:hover{
      opacity: 1;
      transition: color 0.3s ease;
      transform: scale(1.1);
      text-shadow: .5px 0px 1px black;
    }

    .scroll-btn.left {
      left: 10px;
    }

    .scroll-btn.right {
      right: 10px;
    }

    /* Media queries */
    @media (max-width: 768px) {
      #filters {
        padding: 5px;
      }
      .filter {
        margin-top: 10px;
        width: 80px;
        height: 80px;
        margin-right: 10px;
      }

      .filter i {
        font-size: 20px;
      }

      .filter p {
        font-size: 12px;
      }
      .scroll-btn {
        top: 19%;
    }
    }

    @media (max-width: 480px) {
      .filter {
        width: 70px;
        height: 70px;
        margin-right: 8px;
      }

      .filter i {
        font-size: 18px;
      }

      .filter p {
        font-size: 11px;
      }
    }
</style>


